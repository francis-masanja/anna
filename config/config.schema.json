{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Anna AI Configuration",
    "type": "object",
    "properties": {
        "ollama": {
            "type": "object",
            "properties": {
                "model": {
                    "type": "string"
                }
            },
            "required": ["model"]
        },
        "logging": {
            "type": "object",
            "properties": {
                "level": {
                    "type": "string",
                    "enum": ["DEBUG", "INFO", "WARN", "ERROR"]
                }
            },
            "required": ["level"]
        }
    },
    "required": ["ollama", "logging"]
}
